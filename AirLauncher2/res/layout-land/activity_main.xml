    <!-- 功能入口 -->
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <!-- 左提示箭头 -->
        <ImageButton
            android:id="@+id/ib_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            />
        <!-- 功能列表 -->
        <com.eyesee.airlauncher2.view.ObservableHorizontalScrollView 
            android:id="@+id/hsv_app"
            android:layout_width="518dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/ib_nav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ib_nav_selector"
                    />
                <ImageButton
                    android:id="@+id/ib_recorder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ib_recorder_selector"
                    android:layout_marginLeft="6dp"
                    />
                <ImageButton
                    android:id="@+id/ib_files"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ib_files_selector"
                    android:layout_marginLeft="6dp"
                    />
                <ImageButton
                    android:id="@+id/ib_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ib_phone_selector"
                    android:layout_marginLeft="6dp"
                    />
                <ImageButton
                    android:id="@+id/ib_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ib_music_selector"
                    android:layout_marginLeft="6dp"
                    />
                <ImageButton
                    android:id="@+id/ib_apps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ib_apps_selector"
                    android:layout_marginLeft="6dp"
                    />
                <ImageButton
                    android:id="@+id/ib_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ib_set_selector"
                    android:layout_marginLeft="6dp"
                    />
            </LinearLayout>
        </com.eyesee.airlauncher2.view.ObservableHorizontalScrollView>
        <!-- 右提示箭头 -->
        <ImageButton
            android:id="@+id/ib_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            />
    </RelativeLayout>
    <!-- 底部语音按钮以及天气 -->
	<RelativeLayout
	    android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="0"	
		android:background="@drawable/time_bg"
	    >
        <!-- 语音按钮 -->
	    <ImageButton
	        android:id="@+id/ib_voice"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/voice"
	        android:layout_marginLeft="12dp"
	        />
	    <!-- 天气图片  -->
	    <ImageView
	        android:id="@+id/iv_weather"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/cloudy"
	        android:layout_marginLeft="155dp"
	        android:layout_centerVertical="true"
	        />
	    <!-- 天气信息 -->
	    <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/iv_weather"
	        android:layout_marginLeft="35dp"
	        android:layout_centerVertical="true"
	        >
            <!-- 地区 -->
	        <TextView 
		        android:id="@+id/tv_area"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:textSize="@dimen/textsize_weatherinfo"
		        android:text="@string/area"
	        	/>
	        <!-- 天气 -->
	        <TextView 
		        android:id="@+id/tv_weather"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:textSize="@dimen/textsize_weatherinfo"
		        android:text="@string/cloudy"
		        android:layout_toRightOf="@+id/tv_area"
		        android:layout_marginLeft="4dp"
	        	/>
	        <!-- 温度 -->
	         <TextView 
		        android:id="@+id/tv_temperature"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:textSize="@dimen/textsize_weatherinfo"
		        android:text="@string/temperature"
		        android:layout_below="@+id/tv_area"
		        />
	    </RelativeLayout>
	    <!-- 时间信息 -->
	    <RelativeLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="40dp"
	        >
	       <!-- 时间 -->
	       <TextView 
	            android:id="@+id/tv_time"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
		        android:textColor="@color/white"
		        android:textSize="@dimen/textsize_time"
		        android:text="@string/time"
	            />
	       	<LinearLayout 
	       	    android:layout_width="wrap_content"
	       	    android:layout_height="wrap_content"
	       	    android:orientation="vertical"
	       	    android:layout_toRightOf="@+id/tv_time"
		        android:layout_marginLeft="27dp"
		        android:layout_centerVertical="true"
	       	    >
                <!-- 日期 -->
	       	    <TextView 
		            android:id="@+id/tv_date"
		            android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="@color/white"
			        android:textSize="@dimen/textsize_weatherinfo"
			        android:text="@string/date"
		            />
	       	    <!-- 星期 -->
		        <TextView 
		            android:id="@+id/tv_week"
		            android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textColor="@color/white"
			        android:textSize="@dimen/textsize_weatherinfo"
			        android:text="@string/week"
		            />
	       	</LinearLayout>
	    </RelativeLayout>
	</RelativeLayout>
</LinearLayout>
